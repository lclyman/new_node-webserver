<script>

function populatedropdown(yearfield) {
  var today = new Date(),
      yearfield = document.getElementById(yearfield),
      beforeYears = 80
      thisyear = today.getFullYear();

  for (var year = thisyear-beforeYears, index = 0;
           index <= beforeYears;
           index++, year++) {
    yearfield.options[index] = new Option(year, year);
  }
  yearfield.value = thisyear;
}

function populateDays(yearfield) {
  var count = 1;
  var dropdown = document.getElementById(yearfield);

  while(count < 32){
    opt = document.createElement("option");
    opt.text = count;
    opt.value = count;
    dropdown.options.add(opt);
    count +=1;
  }
}

populatedropdown("year");
populateDays("day");

